//font(name,file,size)

font('Ubuntu','Ubuntu-Regular',400)
font('Ubuntu','Ubuntu-Medium',500)
font('Ubuntu','Ubuntu-Bold',700)


$v-font = 'Ubuntu', sans-serif

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

.type--sm
	typeSize(12,10)

.type--main
	typeSize(16,14)

.type--md
	typeSize(20,18)

.type--mdx
	typeSize(24,20)

.type--lg
	typeSize(32,24)

.type--lgx
	typeSize(44,32)

.type--xl
	typeSize(64,44)

.type--mark
	color $mark

.type--bold
	font-weight bold

.type--center
	text-align center

.title
	margin-bottom: 30px
	font-weight: 700

.title--sm
	@extend .type--sm

.title--main
	@extend .type--main

.title--md
	@extend .type--md

.title--lg
	@extend .type--lg

.title--xl
	@extend .type--xl

h5
	@extend .type--md
	color black
h4
	@extend .type--mdx
	color black
h3
	@extend .type--lg
	color black
h2
	@extend .type--lgx
	color black
h1
	@extend .type--xl
	color black

a
	color $link-color
	text-decoration: none
	tr()
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

p
	@extend .type--main

.link--mark
	color $mark
	&:hover
		color darken($mark,20)
	&:visiter
		color darken($mark,30)

.link--main
	color $link-color
	hover-underline($link-color)
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

.link--text
	color $link-color
	text-decoration underline
	&:hover
		text-decoration none


.text
	p
		line-height: 1.6
		margin-bottom: 30px
	ul
		margin-bottom: 30px
		li
			line-height: 1.6
			margin-bottom: 10px
			&:last-child
				margin-bottom: 0

// icons
.icon-row
	f()
	fw()
	align-items center

.icon--sm
	size 16px

.icon--md
	size 24px

.icon--left
	margin-left: 10px

.icon--right
	margin-right: 10px

.icon--mark
	fill $mark

.icon--gray
	fill $gray
// icons === end