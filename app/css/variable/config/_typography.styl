//  ============================ Typography ============================

//webfont('RUB', 'rouble-webfont', 'normal')
//Add fotn rub write .rub a - (a,b,c,d - change type font)

//font(name,file,size)

font('Ubuntu','Ubuntu-Regular',400)
font('Ubuntu','Ubuntu-Medium',500)
font('Ubuntu','Ubuntu-Bold',700)

$v-font = 'Ubuntu', sans-serif

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

.type--sm
	typeSize(12,10)

.type--smx
	typeSize(14,12)

.type--main
	typeSize(16,16)

.type--md
	typeSize(20,18)

.type--mdx
	typeSize(24,20)

.type--lg
	typeSize(32,24)

.type--lgx
	typeSize(44,32)

.type--xl
	typeSize(64,44)

.type--mark
	color $mark

.type--white
	color white

.type--black
	color black

.type--secondary
	color $typeSecondary


.type--head
	color black
	font-weight: 700

.type--bold
	font-weight bold

.type--center
	text-align center

.type--right
	text-align: right

.title
	@extend .mb-48
	font-weight: 700
	color black

.title--sm
	@extend .type--sm
	font-weight: 700
	color black

.title--main
	@extend .type--main
	font-weight: 700
	color black

.title--md
	@extend .type--md
	font-weight: 700
	color black

.title--mdx
	@extend .type--mdx
	font-weight: 700
	color black
	margin-bottom: 20px

.title--lg
	@extend .type--lg
	font-weight: 700
	color black

.title--lgx
	@extend .type--lgx
	font-weight: 700
	color black

.title--xl
	@extend .type--xl
	font-weight: 700
	color black

h5
	@extend .type--md
	color black
h4
	@extend .type--mdx
	color black
h3
	@extend .type--lg
	color black
h2
	@extend .type--lgx
	color black
h1
	@extend .type--xl
	color black

a
	color $link-color
	text-decoration: none
	tr()
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

p
	@extend .type--main

.link--mark
	color $mark
	cp()
	transition color .4s
	&:hover
		color $greenDark
	&:visiter
		color $greenDark

.link
	cp()
	transition color .4s
	color $link-color
	&:hover
		color $mark
	&:visiter
		color $mark

.link--text
	color $link-color
	text-decoration underline
	&:hover
		text-decoration none


.text
	p
		line-height: 1.6
		margin-bottom: 30px
	ul
		margin-bottom: 30px
		li
			line-height: 1.6
			margin-bottom: 10px
			&:last-child
				margin-bottom: 0

// icons
.icon-row
	f()
	align-items center
	span
		width calc(100% - 36px)
.icon-row--extend
	margin-bottom: 32px

.icon
	size 24px

.icon--md
	size 32px

.icon--lg
	size 48px

.icon--xl
	size 80px

.icon--left
	margin-left: 10px

.icon--right
	margin-right: 10px

.icon--mark
	fill $mark

.icon--gray
	fill $gray

.icon--orange
	fill $orange

.icon--white
	fill white

// icons === end

