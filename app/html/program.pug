include block_html/_style.pug
include block_html/_include.pug

.page#header
	+header()
	.board__el.bg-swapm
		.main-cont
			.board__el-wrap.board__el-wrap--extend
				.board__content
					.board__title Вегетарианская еда на дом
					.program-coast.hidden-on-mobile
						.program-coast__el
							.program-coast__title Цена за 6 дней
							.program-coast__val от 6000 руб
						.program-coast__el
							.program-coast__title Цена за прием
							.program-coast__val от 180 руб
					a(href="#program").js-scroll-to.btn--md.btn--white.hidden-on-mobile Выбрать программу
				.board__img(style="background-image:url('img/slide-person-2.png')")
	.program-coast.program-coast--dark.visible-on-mobile
		.program-coast__el
			.program-coast__title Цена за 6 дней
			.program-coast__val от 6000 руб
		.program-coast__el
			.program-coast__title Цена за прием
			.program-coast__val от 180 руб
	.main-cont.visible-on-mobile
		a(href="#program").js-scroll-to.btn--md.btn--mark.btn--mobile Выбрать программу
	.content
		.section-sm
			.main-cont-sm.text
				.type--md.type--black.type--center Эти программы созданы для тех, кто хочет черпать энергию из овощей и фруктов, избегая употребления мяса. Питание полностью сбалансировано.

		// step work
		.section-sm
			.main-cont
				.work-step.work-step--swamp
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/fresh--swamp.svg", alt="")
						.work-step__el-title Питание растительной пищей
						.work-step__el-text Мы составляем меню каждую неделю, считаем БЖУ, выбираем только свежие продукты
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/shield--swamp.svg", alt="")
						.work-step__el-title Баланс здоровья
						.work-step__el-text Регулярно наш курьер привозит Вам пакет с набором блюд на весь день
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/bank--swamp.svg", alt="")
						.work-step__el-title Вы питаетесь правильно!
						.work-step__el-text Без лишних усилий, потери времени на кухне и в магазине за покупкой продуктов
		// step work === end


		// program constructor
		.program-main-wrap#program
			.js-tab-wrap
				// choose program
				.program-group-wrap
					.main-cont
						.program-group.js-tab-cont.js-tick-cont.active(data-programType="weightLoss")
							.program-group__el.js-tick.active
								.program-group__el-name Light
								.program-group__el-val 900 Ккал
							.program-group__el.js-tick
								.program-group__el-name ExtraLight
								.program-group__el-val 1200 Ккал
				// choose program === end

			// program list
			.main-cont
				.program-list-wrap
					.program-list-header
						// program days
						.program-days.js-tick-cont
							-
								var items = ['Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб'];
							each item,i in items
								.program-days__el.js-tick(class=i === 0 ? 'active' : '') #{item}
						// program days === end
						// program consist
						.program-consist
							.program-consist__el
								.program-consist__el-val 2312
								.program-consist__el-type Ккал
							.program-consist__el
								.program-consist__el-val 456
								.program-consist__el-type Белки
							.program-consist__el
								.program-consist__el-val 326,9
								.program-consist__el-type Жиры
							.program-consist__el
								.program-consist__el-val 458
								.program-consist__el-type Углеводы
						// program consist === end
					.program-list-container
						.program-list
							- for (var i=1;i<7;i++)
								// program item
								.program-el
									.program-el__img(style="background-image:url('img/item-sm-" + i + ".jpg')")
									.program-el-wrap
										.program-el__content
											.program-el__head
												.program-el__type Первый завтрак
												.program-el__val 106 Ккал. 300 г.
											.program-el__title Смузи боул с яблоком, корицей и гранола
											.program-el__text Филе куриное, лук, яйцо, специи, гречка зеленая, соус сливочный, грецкие орехи, сливочно-ореховый соус
										.program-el__footer
											.icon-row
												+icon("reload","icon icon--right")
												span Заменить блюдо
								// program item === end
							// program-banner
							.program-banner
								.program-banner-inner
									img(src="img/smile/smile-star.png", alt="").program-banner__img
									.program-banner__cost 180
									.program-banner__text руб/день
									a(href="#order").btn--md.btn--mark.js-scroll-to Заказать
									a(href="#").icon-row
										span.type--md.type--mark.type--bold Подробнее
										+icon("arrow-right","icon icon--left icon--mark")
						// program-banner === end
			// program list === end

		// program constructor === end

		.main-cont
			.program-banner.program-banner--mobile
				.program-banner-inner
					img(src="img/smile/smile-star.png", alt="").program-banner__img
					.program-banner__cost 180
					.program-banner__text руб/день
					a(href="#order").btn--md.btn--mark.js-scroll-to Заказать
					a(href="#").icon-row
						span.type--md.type--mark.type--bold Подробнее
						+icon("arrow-right","icon icon--left icon--mark")

		// contract
		.section-extend.section--gradient#order
			.main-cont-sm
				.contract
					.contract-head.bg-swapm
						.contract-head-info
							.contract-head-title Заказать Light
							.contract-advant
								img(src="img/smile/smile-heart-eyes.png", alt="")
								span без мяса
						.contract-head-img(style="background-image:url('img/slide-person-2.png')")
					.contract-content
						.contract-config-wrap
							.contract-config
								.contract-config__el.active.js-contract-el.js-switch(data-group="programSize" data-item="start")
									+radio('Пробный день',"list","true")
								.contract-config__el.js-contract-el.js-switch(data-group="programSize" data-item="6days")
									+radio('Неделя (6 дней)',"list")
								.contract-config__el.js-contract-el.js-switch(data-group="programSize" data-item="2week")
									+radio('2 недели (12 дней)',"list")
									.contract-config__el-val -5%
								.contract-config__el.js-contract-el.js-switch(data-group="programSize" data-item="4week")
									+radio('4 недели (24 дня)',"list")
									.contract-config__el-val -7.5%
								.contract-config__el.js-contract-el.js-switch(data-group="programSize" data-item="3month")
									+radio('3 месяца  (72 дня)',"list")
									.contract-config__el-val -15%
							.icon-row.icon-row--extend.js-switch-cont.hidden(data-group="programSize" data-item="3month")
								+icon("info","icon icon--right icon--orange")
								span.type--sm Подписка оплачивается сразу на 2 недели и еженедельно в последующий срок
						.input-cont
							.input-row
								label.check-el.js-switch(data-item="isCoupone")
									.style-label.style-label--checkbox
										input(type="checkbox" ).style-input
										.style-input-element
											+icon("checked","icon")
										.style-input-text У меня есть купон
						.input-cont.hidden.js-switch-cont(data-item="isCoupone")
							.input-cont.input-cont--three
								.input-row.input-row--validate
									input(type="text" data-placeholder="Номер купона" class="input")
									.input-msg Купон не подходит
									+icon("close","icon icon-validate-false")
									+icon("checked","icon icon-validate-true")
								.input-row.input-row--validate
									input(type="text" data-placeholder="Телефон" class="input" data-mask="8(000)000-00-00")
									.input-msg Введённые данные не должны содержать цифры
									+icon("close","icon icon-validate-false")
									+icon("checked","icon icon-validate-true")
								.input-row
									.btn--md.btn--light.btn--mobile.disable Применить
						.input-cont.js-switch-cont(data-item="isCoupone")
							.input-row
								input(type="text" data-placeholder="Телефон" class="input" data-mask="8(000)000-00-00")
						.contract-total-wrap
							.contract-total
								.contract-total__name Extralight
								.contract-total__val 6300 руб
							.contract-total
								.contract-total__name Итого
								.contract-total__val.type--mark.type--bold.type--md 6300 руб
					.contract-footer
						.contract-footer__text Нажимая кнопку “Оформить” я принимаю условия условия <a href="#" class="link--mark">передачи информации</a>
						.btn--md.btn--mark.btn--mobile Оформить
		// contract === end

		+advant()
		+review()

		.main-cont.js-tab-wrap
			.title.title--lgx Часто задаваемые вопросы
			+faq()

	+footer()
include ./block_html/_script.pug
