		// sale
		.main-cont
			.title.title--lgx Акции
			.sale-list-container
				.sale-list
					- for (var i=0;i<3;i++)
						a(href="#").sale-el
							.sale-el__img(style="background-image:url('img/sale-1.jpg')")
							.sale-el__content
								.sale-el__text Копи баллы - питайся бесплатно! Бонусная программа для наших клиентов
								.sale-el__get.link--mark Посмотреть
		// sale === end

		// subscription
		.main-cont
			.invite-subs
				.invite-subs-img
					img(src="img/circle-food-2.png", alt="")
				.invite-subs-info
					.invite-subs-title Не знаете какую программу выбрать?
					.invite-subs-text Оставьте телефон и наш менеджер поможет подобрать рацион
					.input-btn-cont
						.input-row.input-row--validate
							input(type="text" data-placeholder="Телефон" class="input input-mask--phone" name="phone")
							.input-msg Введённые данные не должны содержать цифры
							+icon("close","icon icon-validate-false")
							+icon("checked","icon icon-validate-true")
						.btn--md.btn--mark Отправить
		// subscription === end

		+review()

		.section
			.main-cont.js-tab-wrap
				.title.title--lgx Часто задаваемые вопросы
				+faq()

		//press
		.section--gradient.section-extend
			.main-cont.js-slider-wrap
				.review-head
					.review-head__info
						.type--head.type--lgx.mb-16 О нас пишут
						.review-head__text СМИ оценивают нас как надёжную компанию, которая ценит своих клиентов и доставляет всегда свежую вкусную еду, помогающую держать себя в форме.
					.review-control.slider-control-row
						.slider-control.slider-control--light-gray.js-control-left
							+icon("arrow-left","icon")
						.slider-control.slider-control--light-gray.js-control-right
							+icon("arrow-right","icon")
				.slider-wrap
					.slider-press.slider-extend.js-slider
						- for (var i=0;i<6;i++)
							.slider-el-wrap
								.slider-press__el-wrap
									.slider-press__el
										img(src="img/press-1.png", alt="")
							.slider-el-wrap
								.slider-press__el-wrap
									.slider-press__el
										img(src="img/press-2.png", alt="")
		//press === end


		// deliver
		.main-cont.js-tab-wrap
			.deliver-wrap
				.deliver-info
					.title.title--lgx Доставка
