			// program list
			.main-cont
				.program-list-wrap
					// Если это программа 21 день добавь класс .program-list-header--extend
					.program-list-header
						// program days
						.size.js-tick-cont
							.size__el.js-tick.active 1я неделя
							.size__el.js-tick 2я неделя
						.program-days.js-tick-cont
							-
								var items = [	'Пн','Вт','Ср','Чт','Пт','Сб'];
							each item,i in items
								.program-days__el.js-tick(class=i===0 ? 'active' : '') #{item}
						// program days === end
						// program consist
						.program-consist
							.program-consist__el
								.program-consist__el-val 2312
