					img(src="img/circle-food-1.png", alt="")
				.invite-info
					.invite-info-wrap
						.invite-title Настройте свой рацион
						.invite-text Вы можете исключить любой ингредиент, блюдо или тип блюда по желанию
						a(href="#program").js-scroll-to.btn--md.btn--mark.invite-info__btn Выбрать программу
		// invite === end

		// program constructor
		.program-main-wrap#program
			.main-cont
				.title.title--lgx Выберите программу
			.js-tab-wrap
				// choose type program
				.main-cont
					.program-type-wrap
						.program-type.js-tick-cont
							.program-type__el.program-type__el--seaLight.active.js-tick.js-tab(data-programType="weightLoss")
								.program-type__el-icon
									+icon("cat-light","icon")
								.program-type__el-name Снижение <br> веса
							.program-type__el.program-type__el--blueLight.js-tick.js-tab(data-programType="saveForm")
								.program-type__el-icon
									+icon("cat-normal","icon")
								.program-type__el-name Поддержание <br> формы
							.program-type__el.program-type__el--pinkLight.js-tick.js-tab(data-programType="weightIncrease")
								.program-type__el-icon
									+icon("cat-strong","icon")
								.program-type__el-name Набор <br> массы
							.program-type__el.program-type__el--swampLight.js-tick.js-tab(data-programType="meatLoss")
								.program-type__el-icon
									+icon("cat-veggi","icon")
								.program-type__el-name Питание <br> без мяса
							.program-type__el.program-type__el--orangeLight.js-tick.js-tab(data-programType="cleanHeаlth")
								.program-type__el-icon
									+icon("cat-detox","icon")
								.program-type__el-name Очищение <br> организма
							.program-type__el.program-type__el--violetLight.js-tick.js-tab(data-programType="foodOffice")
								.program-type__el-icon
									+icon("cat-daily","icon")
								.program-type__el-name Питание <br> в офис
				// choose type program === end

				// choose program
				.program-group-wrap
					.main-cont
						.program-group.js-tab-cont.js-tick-cont.active(data-programType="weightLoss")
							.program-group__el.js-tick.active
								.program-group__el-name Light
								.program-group__el-val 900 Ккал
							.program-group__el.js-tick
								.program-group__el-name ExtraLight
								.program-group__el-val 1200 Ккал
							.program-group__el.js-tick
								.program-group__el-name Slim 21 день
								.program-group__el-val 900 / 1200 Ккал
						.program-group.js-tab-cont.js-tick-cont(data-programType="saveForm")
							.program-group__el.js-tick.active
								.program-group__el-name Normal
								.program-group__el-val 900 Ккал
							.program-group__el.js-tick
								.program-group__el-name Balance
								.program-group__el-val 1200 Ккал
						.program-group.js-tab-cont.js-tick-cont(data-programType="weightIncrease")
							.program-group__el.js-tick.active
								.program-group__el-name Strong
								.program-group__el-val 900 Ккал
						.program-group.js-tab-cont.js-tick-cont(data-programType="meatLoss")
							.program-group__el.js-tick.active
								.program-group__el-name Vegan
								.program-group__el-val 900 Ккал
							.program-group__el.js-tick
								.program-group__el-name Fish
								.program-group__el-val 1200 Ккал
						.program-group.js-tab-cont.js-tick-cont(data-programType="cleanHeаlth")
							.program-group__el.js-tick.active
								.program-group__el-name Detox
								.program-group__el-val 900 Ккал
						.program-group.js-tab-cont.js-tick-cont(data-programType="foodOffice")
							.program-group__el.js-tick.active
								.program-group__el-name Daily
								.program-group__el-val 900 Ккал
