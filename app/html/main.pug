							span.type--md.type--false от 280
						.program-banner__cost-wrap__el
							.program-banner__cost 180
							.program-banner__text руб/день
					a(href="#order").btn--md.btn--mark.js-scroll-to Заказать
					a(href="#").icon-row
						span.type--md.type--mark.type--bold Подробнее
						+icon("arrow-right","icon icon--left icon--mark")

		// step work
		.section
			.main-cont
				.title.title--lgx Как это работает
				.work-step
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/step-check.svg", alt="")
