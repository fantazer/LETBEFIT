						.deliver-pick__el
							.deliver-pick__el-color(style="background:#6b33b3")
							.deliver-pick__el-text Доставка стоит 250 р.
				.deliver-map.map-wrap
					.map
						//put code map her
		// deliver === end

	+footer()
