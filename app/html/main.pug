include block_html/_style.pug
include block_html/_include.pug

.page
	+header()
	.main-slider
		.slider-wrap.slider-wrap--inarrow
			.number-slide-wrap
				.main-cont
					.number-slide
			.slider-control.slider-control--left
				+icon("arrow-left","icon")
			.slider-control.slider-control--right
				+icon("arrow-right","icon")
			.slider-item.slider-main.js-slider-pagination
				.slider-el-wrap
					.slider-main__el.slider-main__el--sea
						.main-cont
							.slider-main__el-wrap
								.slider-main__content
									.slider-main__title Худей легко. Худей со вкусом
									a(href="#program").js-scroll-to.btn--md.btn--white Выбрать программу
								.slider-main__img(style="background-image:url('img/slide-person-1.png')")
				.slider-el-wrap
					.slider-main__el.slider-main__el--pink
						.main-cont
							.slider-main__el-wrap
								.slider-main__content
									.slider-main__title Здоровая еда для здоровой жизни
									a(href="#program").js-scroll-to.btn--md.btn--white Выбрать программу
								.slider-main__img(style="background-image:url('img/slide-person-2.png')")
				.slider-el-wrap
					.slider-main__el.slider-main__el--violet
						.main-cont
							.slider-main__el-wrap
								.slider-main__content
									.slider-main__title Ешь вкусно, экономь время
									a(href="#program").js-scroll-to.btn--md.btn--white Выбрать программу
								.slider-main__img(style="background-image:url('img/slide-person-3.png')")
	.content
		.main-cont
			.advant
				a(href="#").advant__el
					.advant__el-icon
						img(src="img/icon/menu-list.svg", alt="")
					.advant__el-text Более 600 видов блюд, без трансжиров, сахара и консервантов?
				a(href="#").advant__el
					.advant__el-icon
						img(src="img/icon/packaging.svg", alt="")
					.advant__el-text Курьер может забрать нашу упаковку на переработку пластика
				a(href="#").advant__el
					.advant__el-icon
						img(src="img/icon/schedule.svg", alt="")
					.advant__el-text Умная доставка. Доставляем утром, вечером в часовой интервал
				a(href="#").advant__el
					.advant__el-icon
						img(src="img/icon/product.svg", alt="")
					.advant__el-text Приготовили и сразу доставляем. Используем технологию Smart-Frost.
		.main-cont
			.invite
				.invite-img
					.invite-msg
						img(src="img/smile/smile-lazy.png", alt="")
						span Вот так выглядит наш набор готового питания на сутки
					img(src="img/circle-food-1.png", alt="")
				.invite-info
					.invite-info-wrap
						.invite-title Настройте свой рацион
						.invite-text Вы можете исключить любой ингредиент, блюдо или тип блюда по желанию
						a(href="#program").js-scroll-to.btn--md.btn--mark Выбрать программу

		.program-main-wrap#program
			.main-cont
				.title.title--lgx Выберите программу
			.main-cont
				.program-type.js-tick-cont
					.program-type__el.program-type__el--seaLight.active.js-tick.js-program-type(data-programType="weightLoss")
						.program-type__el-icon
							+icon("cat-light","icon")
						.program-type__el-name Снижение <br> веса
					.program-type__el.program-type__el--blueLight.js-tick.js-program-type(data-programType="saveForm")
						.program-type__el-icon
							+icon("cat-normal","icon")
						.program-type__el-name Поддержание <br> формы
					.program-type__el.program-type__el--pinkLight.js-tick.js-program-type(data-programType="weightIncrease")
						.program-type__el-icon
							+icon("cat-strong","icon")
						.program-type__el-name Набор <br> массы
					.program-type__el.program-type__el--swampLight.js-tick.js-program-type(data-programType="meatLoss")
						.program-type__el-icon
							+icon("cat-veggi","icon")
						.program-type__el-name Питание <br> без мяса
					.program-type__el.program-type__el--orangeLight.js-tick.js-program-type(data-programType="cleanHeаlth")
						.program-type__el-icon
							+icon("cat-detox","icon")
						.program-type__el-name Очищение <br> организма
					.program-type__el.program-type__el--violetLight.js-tick.js-program-type(data-programType="foodOffice")
						.program-type__el-icon
							+icon("cat-daily","icon")
						.program-type__el-name Питание <br> в офис
			.program-group-wrap
				.main-cont
					.program-group.js-program-group.js-tick-cont.active(data-programType="weightLoss")
						.program-group__el.js-tick.active
							.program-group__el-name Light
							.program-group__el-val 900 Ккал
						.program-group__el.js-tick
							.program-group__el-name ExtraLight
							.program-group__el-val 1200 Ккал
					.program-group.js-program-group.js-tick-cont(data-programType="saveForm")
						.program-group__el.js-tick.active
							.program-group__el-name Normal
							.program-group__el-val 900 Ккал
						.program-group__el.js-tick
							.program-group__el-name Balance
							.program-group__el-val 1200 Ккал
					.program-group.js-program-group.js-tick-cont(data-programType="weightIncrease")
						.program-group__el.js-tick.active
							.program-group__el-name Strong
							.program-group__el-val 900 Ккал
					.program-group.js-program-group.js-tick-cont(data-programType="meatLoss")
						.program-group__el.js-tick.active
							.program-group__el-name Vegan
							.program-group__el-val 900 Ккал
						.program-group__el.js-tick
							.program-group__el-name Fish
							.program-group__el-val 1200 Ккал
					.program-group.js-program-group.js-tick-cont(data-programType="cleanHeаlth")
						.program-group__el.js-tick.active
							.program-group__el-name Detox
							.program-group__el-val 900 Ккал
					.program-group.js-program-group.js-tick-cont(data-programType="foodOffice")
						.program-group__el.js-tick.active
							.program-group__el-name Daily
							.program-group__el-val 900 Ккал
			.main-cont
				.program-list-wrap
					.program-list-header
						.program-days.js-tick-cont
							-
								var items = [	'Пн','Вт','Ср','Чт','Пт','Сб'];
							each item,i in items
								.program-days__el.js-tick(class=i===0 ? 'active' : '') #{item}
						.program-consist
								.program-consist__el
									.program-consist__el-val 2312
									.program-consist__el-type Ккал
								.program-consist__el
									.program-consist__el-val 456
									.program-consist__el-type Белки
								.program-consist__el
									.program-consist__el-val 326,9
									.program-consist__el-type Жиры
								.program-consist__el
									.program-consist__el-val 458
									.program-consist__el-type Углеводы
					.program-list
						- for (var i=1;i<8;i++)
							.program-el
								.program-el__img(style="background-image:url('img/item-sm-"+i+".jpg')")
								.program-el-wrap
									.program-el__content
										.program-el__head
											.program-el__type Первый завтрак
											.program-el__val 106 Ккал. 300 г.
										.program-el__title Смузи боул с яблоком, корицей и гранола
										.program-el__text Филе куриное, лук, яйцо, специи, гречка зеленая, соус сливочный, грецкие орехи, сливочно-ореховый соус
									.program-el__footer
										.icon-row
											+icon("reload","icon icon--right")
											span Заменить блюдо
						.program-banner
							.program-banner-inner
								img(src="img/smile/smile-star.png", alt="").program-banner__img
								.program-banner__cost 180
								.program-banner__text руб/день
								.btn--md.btn--mark Заказать
								a(href="#").icon-row
									span.type--md.type--mark.type--bold Подробнее
									+icon("arrow-right","icon icon--left icon--mark")

		.main-cont
			.title.title--lgx Как это работает
			.work-step
				.work-step__el
					.work-step__el-icon
						img(src="img/icon/step-1.svg", alt="")
					.work-step__el-title Выберите тариф
					.work-step__el-text Мы составляем меню каждую неделю, считаем БЖУ, выбираем только свежие продукты
				.work-step__el
					.work-step__el-icon
						img(src="img/icon/step-2.svg", alt="")
					.work-step__el-title Получите продукты
					.work-step__el-text Регулярно наш курьер привозит Вам пакет с набором блюд на весь день
				.work-step__el
					.work-step__el-icon
						img(src="img/icon/step-3.svg", alt="")
					.work-step__el-title Вы питаетесь правильно!
					.work-step__el-text Без лишних усилий, потери времени на кухне и в магазине за покупкой продуктов

			.title.title--lgx Акции
			.sale-list
				- for (var i=0;i<3;i++)
					a(href="#").sale-el
						.sale-el__img(style="background-image:url('img/sale-1.jpg')")
						.sale-el__content
							.sale-el__text Копи баллы - питайся бесплатно! Бонусная программа для наших клиентов
							.sale-el__get.link--mark Посмотреть

			.invite-subs
				.invite-subs-img
					img(src="img/circle-food-2.png", alt="")
				.invite-subs-info
					.invite-subs-title Не знаете какую программу выбрать?
					.invite-subs-text Оставьте телефон и наш менеджер поможет подобрать рацион
					.input-btn-cont
						.input-row
							input(type="text" data-placeholder="Телефон" class="input")
							//.error-msg Введённые данные не должны содержать цифры
						.btn--smx.btn--mark Отправить

		.section-extend.section--gradient
			.main-cont
				.title.title--lgx Отзывы клиентов
				.review
					.slider-wrap
						.slider-item.slider-review.slider-extend
							- for (var j=1;j<5;j++)
								- for (var i=1;i<5;i++)
									.slider-el-wrap
										.slider-review__el(style="background-image:url('img/inst-item-"+i+".jpg')")
		.section
			.main-cont
				.title.title--lgx Часто задаваемые вопросы
				.faq-wrap
					.faq-type.js-tick-cont
						.faq-type__el.js-tick.active
							+icon("apple","icon icon--lg")
							span Диета и питание
						.faq-type__el.js-tick
							+icon("money","icon icon--lg")
							span Заказ и оплата
						.faq-type__el.js-tick
							+icon("deliver","icon icon--lg")
							span Доставка
						.faq-type__el.js-tick
							+icon("cook","icon icon--lg")
							span Приготовление
				.accordion
					-
						var items = [
							'1. Как понять что и когда есть?',
							'2. Как часто употреблять рационы?',
							'3. Кто занимается составлением меню?',
							'4. Как часто обновляется меню?',
							'5. Могу ли я заменить или исключить блюдо?',
						];
					each item in items
						.accordion__el
							.accordion__el-head
								.accordion__el-head-text #{item}
								.accordion__el-head-icon
							.accordion__el-content.text
								p Платежный план «переезд в готовый дом» - дает возможность будущему покупателю переехать из квартиры в загородный дом без полной оплаты за домовладение! Для быстрого переезда в готовый загородный дом достаточно внести 10% от стоимости коттеджа и Вы можете заселяться!
								p На продажу имеющейся в собственности у покупателя квартиры предоставляется рассрочка четыре месяца. По факту реализации квартиры оплачивается остаточная стоимость за домовладение.
	+footer()
include ./block_html/_script.pug
