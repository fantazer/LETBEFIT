include block_html/_style.pug
include block_html/_include.pug

.page#header
	+header()
	.board__el.board__el--hidden.bg-greenDark
		.main-cont
			.board__el-wrap.board__el-wrap--full
				.board__content.board__content--retail
					.board__title Поставка ПП-блюд ритейлерам
					.board__title-sub-sm Мы специализируемя на здоровом питании и умеем делать классные и вкусные ПП-блюда
					a(href="#form").js-scroll-to.btn--md.btn--white.btn--mobile Оставить заявку
		.retail-img(style="background-image:url('img/banner-ritail.png')")
	.content.content--clear-bottom
		.bg-square(style="background-image:url('img/square.svg')")
		.section-sm
			.main-cont
				.g-row
					.g-lg-3.g-xs-12
						.type--head.type--xl.mb-12 100K +
						.type--head.type--md.mb-24 довольных клиентов
						.type--secondary уже на протяжении 3-х лет мы рады создавать для Вас вкусные и полезные рационы питания
					.g-lg-3.g-offset-lg-1.g-xs-12
						.type--head.type--xl.mb-12 65 +
						.type--head.type--md.mb-24 наименований блюд
						.type--secondary уже на протяжении 3-х лет мы рады создавать для Вас вкусные и полезные рационы питания
					.g-lg-3.g-offset-lg-1.g-xs-12
						.type--head.type--xl.mb-12 4
						.type--head.type--md.mb-24 года на рынке
						.type--secondary уже на протяжении 3-х лет мы рады создавать для Вас вкусные и полезные рационы питания
		.section-extend.section--gradient
			.main-cont
				.g-row
					.g-lg-5.g-md-5.g-xs-12
						a(href="https://youtu.be/8ROwUDgWm_o").video-production.fancybox
							.video-production__el(style="background-image:url('img/video-production.jpg')")
							+icon("play","icon")
					.video-production-info.g-xl-5.g-offset-xl-2.g-lg-6.g-offset-lg-1.g-md-5.g-offset-md-1.g-xs-12
						img(src="img/haccp.svg", alt="").mb-64
						.type--head.type--lgx.mb-32 Наше производство сертифицировано по HASP
						.type--md.type--primary У нас большая пользовательская база, которая регулярно оценивает блюда и на ритейл мы отдаем самые топовые

		.section.section--border
			.main-cont
				.g-row
					.g-lg-5.g-md-7.g-xs-12.mobile-order-2
						.type--head.type--lgx.mb-32 Только лучшие блюда по реальным оценкам
						.type--md.type--primary.mb-80 У нас большая пользовательская база, которая регулярно оценивает блюда и на ритейл мы отдаем самые топовые
						a(href="#form").js-scroll-to.btn--md.btn--mark.btn--mobile Оставить заявку
					.g-xl-5.g-offset-xl-2.g-lg-6.g-offset-lg-1.g-md-4.g-offset-md-1.g-xs-12.mobile-order-1
						img(src="img/msg-list.png", alt="")

		.section-full
			.main-cont
				.title-row.mb-48
					.type--lgx.type--head Примеры блюд
					.marker.js-tick-cont
						.marker-el.js-tick.active Завтрак
						.marker-el.js-tick Суп
						.marker-el.js-tick Основное блюдо

			.program-list-scroll-wrap.desktop-row-scroll.desktop-row-scroll--clear
				.program-list-scroll
					- for (var i=0;i<15;i++)
						+item(1,'simple')

		.section-full.section--gradient
			.bg-square(style="background-image:url('img/square.svg')")
			.main-cont
				.g-row
					.g-lg-5.g-md-12.g-xs-12.mobile-order-2
						.type--head.type--lgx.mb-32 Гибкая доставка по Москве и Питеру
						.type--md.type--primary.mb-80 У нас своя курьерская служба, именно поэтому , мы можем предложить Вам гибкие условия доставки
						a(href="#form").js-scroll-to.btn--md.btn--mark.btn--mobile Оставить заявку
					.g-xl-5.g-offset-xl-2.g-lg-6.g-offset-lg-1.g-md-12.g-xs-12.mobile-order-1
						.g-stretch
							.g-lg-6.g-xs-6
								.card-advant
									img(src="img/icon/suitcase-time.svg", alt="").mb-48
									.card-advant-text.type--primary.type--center Можем доставлять в рефрижираторе или курьерами в термосумках
							.g-lg-6.g-xs-6
								.card-advant
									img(src="img/icon/way.svg", alt="").mb-48
									.card-advant-text.type--primary.type--center Доставляем до конечных точек или до распределительного центра


		+review(true,'clear')

		.section
			.main-cont.js-tab-wrap
				.title.title--lgx Часто задаваемые вопросы
				+faq()

		.section-full.section--gradient#form
			.main-cont-sm
				.contract
					.contract-content
						.title.title--lgx Напишите нам
						.cell-row
							.cell-col
								.input-row.input-row--validate
									input(type="text" data-placeholder="Ваше имя" class="input")
									.input-msg Ошибка
									+icon("close","icon icon-validate-false")
									+icon("checked","icon icon-validate-true")
								.input-row.input-row--validate
									input(type="text" data-placeholder="Телефон" data-mask="8(000)000-00-00" class="input")
									.input-msg Ошибка
									+icon("close","icon icon-validate-false")
									+icon("checked","icon icon-validate-true")
								.input-row.input-row--validate
									input(type="text" data-placeholder="Email (необязательно)" class="input")
									.input-msg Ошибка
									+icon("close","icon icon-validate-false")
									+icon("checked","icon icon-validate-true")
							.cell-col
								.input-row.input-row--full
									textarea(name="text", rows="8" class="input" data-placeholder="Сообщение")
						.upload-wrap
							label.upload
								.btn--sm-figure.btn--mark
									+icon("plus","icon")
								.upload__text Прикрепить файл
								input(type="file").upload-btn
							.upload-img
					.contract-footer
						.contract-footer__text Нажимая кнопку “Оформить” я принимаю условия условия <a href="#" class="link--mark">передачи информации</a>
						.btn--md.btn--mark.btn--mobile Оставить отзыв
	+footer()
include ./block_html/_script.pug
