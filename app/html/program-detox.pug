include block_html/_style.pug
include block_html/_include.pug

.page#header
	+header()
	.board__el.bg-orange
		.main-cont
			.board__el-wrap.board__el-wrap--extend
				.board__content
					.board__title Detox 1100 Ккал
					.program-coast.hidden-on-mobile
						.program-coast__el
							.program-coast__title 1 день
							.program-coast__val 2000 руб
						.program-coast__el
							.program-coast__title 2 дня
							.program-coast__val 3080 руб
					a(href="#").js-scroll-to.btn--md.btn--white.hidden-on-mobile Выбрать программу
				.board__img(style="background-image:url('img/slide-person-8.png')")
	.program-coast.program-coast--dark.visible-on-mobile
		.program-coast__el
			.program-coast__title Цена за 6 дней
			.program-coast__val от 6000 руб
		.program-coast__el
			.program-coast__title Цена за прием
			.program-coast__val от 180 руб
	.main-cont.visible-on-mobile
		a(href="#order").btn--md.btn--mark.btn--mobile Выбрать программу
	.content
		.section-sm
			.main-cont-sm.text
				.type--md.type--black.type--center Это программа создана для тех, кто хочет очистить свой организм от накопившихся шлаков и токсинов, нормализовать работу ЖКТ, избавиться от лишнего веса и провести вкусный и витаминный "выходной" для своего организма.
		// step work
		.section-sm
			.main-cont
				.work-step.work-step--orange
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/stopwatch--orange.svg", alt="")
						.work-step__el-title Экономия времени
						.work-step__el-text Мы составляем меню каждую неделю, считаем БЖУ, выбираем только свежие продукты. Мы составляем меню каждую неделю
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/shield--orange.svg", alt="")
						.work-step__el-title Баланс здоровья
						.work-step__el-text Мы составляем меню каждую неделю, считаем БЖУ, выбираем только свежие продукты. Мы составляем меню каждую неделю
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/bank--orange.svg", alt="")
						.work-step__el-title Это выгодно
						.work-step__el-text Мы составляем меню каждую неделю, считаем БЖУ, выбираем только свежие продукты. Мы составляем меню каждую неделю
		// step work === end


		// program constructor
		.program-main-wrap#program
			.js-tab-wrap
				// choose program
				.program-group-wrap
					.main-cont
						.type--head.type--lgx.mb-24 Попробуй все вкусы наших детокс смузи!
						.program-group.js-tab-cont.js-tick-cont.active(data-programType="weightLoss")
							.program-group__el.js-tick.active
								.program-group__el-name 1 день
								.program-group__el-val 900 Ккал
							.program-group__el.js-tick
								.program-group__el-name 2 дня
								.program-group__el-val 1200 Ккал
				// choose program === end


			// program list
			.main-cont
				.program-list-wrap
					.program-list-header
						// program consist
						.program-consist
							.program-consist__el
								.program-consist__el-val 2312
								.program-consist__el-type Ккал
							.program-consist__el
								.program-consist__el-val 456
								.program-consist__el-type Белки
							.program-consist__el
								.program-consist__el-val 326,9
								.program-consist__el-type Жиры
							.program-consist__el
								.program-consist__el-val 458
								.program-consist__el-type Углеводы
						// program consist === end
					.program-list-container
						.program-list
							- for (var i=1;i<12;i++)
								.program-el
									.program-el__img(style="background-image:url('img/detox/detox-" + i + ".jpg')")
									.program-el-wrap
										.program-el__content.program-el__content--flex
											.type--head.mb-12 Глоток силы
											.type--main.type--primary.mb-24 Банан, протеин, апельсин, блепиха
											.program-el__footer.program-el__footer--clear
												.type--sm 110 руб.
							.program-banner
								.program-banner-inner
									img(src="img/smile/smile-star.png", alt="").program-banner__img
									.program-banner__cost 2090
									.program-banner__text руб/ 1 день
									a(href="#order").btn--md.btn--mark.js-scroll-to Заказать
									if(program)
										a(href="#").icon-row
											span.type--md.type--mark.type--bold Подробнее
											+icon("arrow-right","icon icon--left icon--mark")
			// program list === end
		// program constructor === end

		.main-cont
			.program-banner.program-banner--mobile
				.program-banner-inner
					img(src="img/smile/smile-star.png", alt="").program-banner__img
					.program-banner__cost 180
					.program-banner__text руб/день
					a(href="#order").btn--md.btn--mark.js-scroll-to Заказать
					a(href="#").icon-row
						span.type--md.type--mark.type--bold Подробнее
						+icon("arrow-right","icon icon--left icon--mark")

		+contract('Заказать Detox','bg-orange','slide-person-8')

		+advant()
		+review()

		.main-cont.js-tab-wrap
			.title.title--lgx Часто задаваемые вопросы
			+faq()

	+footer()
include ./block_html/_script.pug
