include block_html/_style.pug
include block_html/_include.pug

.page#header
	+header()
	.content.content--clear-top
		+lk-nav-mobile()
		.lk
			.lk-head-wrap
				.main-cont
					.lk-head-cont
						.lk-head
							.lk-profile
								.lk-user
									.lk-user__icon
										+icon("profile","icon")
									.lk-user__cont
										.lk-user__name Анастасия
										.lk-user__info +7 983 666 55 55
								.lk-bonus
									.lk-bonus-cont
										.lk-bonus-icon
											+icon("coin","icon")
										.lk-bonus-val 2500
									.lk-bonus-info Куда тратить бонусы?
						.lk-tool
							+lk-nav()
			.main-cont
				.lk-wrap
					.lk-cont
						.slider-wrap.slider-wrap--lk.js-slider-wrap.mb-64
							.slider-control-wrap
								.slider-control.slider-control--white.slider-control--sm.js-control-left
									+icon("arrow-left","icon")
								.slider-control.slider-control--white.slider-control--sm.js-control-right
									+icon("arrow-right","icon")
							.slider-item.slider-lk.js-slider
								- for (var i=0;i<4;i++)
									a(href="#").slider-el-wrap
										.slider-lk__el.slider-lk__el--lg(style="background-image:url('img/lk-slider-1--lg.jpg')")
										.slider-lk__el.slider-lk__el--sm(style="background-image:url('img/lk-slider-1--sm.jpg')")
										.btn--sm.btn--white.slider-lk-get Получить
									a(href="#").slider-el-wrap
										.slider-lk__el.slider-lk__el--lg(style="background-image:url('img/lk-slider-2--lg.jpg')")
										.slider-lk__el.slider-lk__el--sm(style="background-image:url('img/lk-slider-1--sm.jpg')")
										.btn--sm.btn--white.slider-lk-get Получить

						.title-row.mb-48
							.type--lg.type--head Ближайшая доставка
							a(href="#").more
								span.type--mark Все
								+icon("arrow-right","icon icon--sm icon--mark")


						.lk-list-head.desktop-row-scroll.lk-day
							.marker--fluid.desktop-row-scroll-wrap.js-tick-cont
								.marker-el.js-tick.active
									.type--smx.type--strong Вт, 24 Сен
									.type--sm | Extralight 900 Ккал
								.marker-el.js-tick
									.type--smx.type--strong Чт, 26
									.type--sm | Extralight 900 Ккал
								.marker-el.js-tick
									.type--smx.type--strong Пт, 27
									.type--sm | Balance 1400 Ккал
								.marker-el.js-tick
									.type--smx.type--strong Сб, 11
									.type--sm | Extralight 900 Ккал


						.lk-list-wrap.mb-32
							.desktop-row-scroll.js-horizontal-scroll.scroll-template.dragscroll
								.lk-list.desktop-row-scroll-wrap
									- for (var i=1;i<8;i++)
										+lk-item(i)
						//remove hidden for empty state
						.lk-empty.mb-64.hidden
							.lk-empty__info
								img(src="img/icon/food--gray.svg", alt="")
								span.type--md.type--secondary У Вас еще нет заказов

						// options
						.type--lg.type--head.mb-48 Опции
						.switch-row.mb-24.js-switch(data-group="Oneness" data-item="isOneness")
							.switch.js-toggle
							.type--head.type--md Доставка без встречи с курьером
						.text.mb-32.js-switch-cont(data-group="Oneness" data-item="isOneness")
							p.type--secondary В режиме доставки "без встречи с курьером" курьер будет вешать Ваш заказ на ручку или оставлять в оговоренном Вами месте. Вам придет уведомление о доставке как только курьер отметит заказ доставленным. Если Вы выбрали оплату наличными, то курьер встретится с Вами при первой доставке для получения оплаты
						.input-btn-cont.input-btn-cont--full.js-switch-cont.mb-12.hidden(data-group="Oneness" data-item="isOneness")
							.input-row.input-row--validate
								input(type="text" data-placeholder="Где оставить?" class="input")
								.input-msg Введённые данные не должны содержать цифры
								+icon("close","icon icon-validate-false")
								+icon("checked","icon icon-validate-true")
							.btn--md.btn--mobile.btn--light.disable Отправить

						.switch-row.mb-24
							.switch.js-toggle
							.type--head.type--md Я буду сдавать упаковку в переработку
						.text.mb-64
							p.type--secondary Вы можете сдать пластиковые лотки в переработку нашему курьеру. Лотки должны быть вымыты и не содержать остатков пищи. Мы собираем такие лотки на нашем производстве и регулярно отправляем их нашим партнерам по утилизации
						// options === end


						.title-row.mb-48
							.type--lg.type--head Бонусы от партнеров
							a(href="#").more
								span.type--mark Все
								+icon("arrow-right","icon icon--sm icon--mark")

						.mobile-row-scroll
							.bonus-list.mobile-row-scroll-wrap
								- for (var i=0;i<3;i++)
									.bonus-el.mobile-row-scroll-item
										.bonus-el__img(style="background-image:url('img/bonus-1.jpg')")
										.bonus-el-cont
											.bonus-el__info 4 урока английского в Skyeng в подарок при первой оплате обучения
											.bonus-el__get
												.btn--sm.btn--light.btn--full Подробнее

	+footer()
include ./block_html/_script.pug
