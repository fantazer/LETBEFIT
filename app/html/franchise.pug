include block_html/_style.pug
include block_html/_include.pug

.page#header
	+header()
	.content.content--clear-bottom
		.main-cont
			.title.title--xl Франшиза
			.box-gradient.mb-100
				.box-gradient-inner.text
					p.type--md Запустите доставку здорового питания BeFit в вашем городе! Мы обеспечим пошаговый план по открытию доставки здорового питания, юридическую поддержку, консультацию по маркетингу , весь спектр рекламных материалов. Не откладывай на потом, начни строить прибыльный бизнес уже сейчас!
					p.type--md По вопросам приобретения франшизы - пишите нам на почту <a href="mailto:franchise@letbefit.ru">franchise@letbefit.ru</a>
		.section-full.section--gradient
			.main-cont-sm
				.contract
					.contract-content
						.title.title--lgx Напишите нам
						.cell-row
							.cell-col
								.input-row.input-row--validate
									input(type="text" data-placeholder="Ваше имя" class="input")
									.input-msg Ошибка
									+icon("close","icon icon-validate-false")
									+icon("checked","icon icon-validate-true")
								.input-row.input-row--validate
									input(type="text" data-placeholder="Телефон" class="input input-mask--phone")
									.input-msg Ошибка
									+icon("close","icon icon-validate-false")
									+icon("checked","icon icon-validate-true")
								.input-row.input-row--validate
									input(type="text" data-placeholder="Город" class="input")
							.cell-col
								.input-row.input-row--full
									textarea(name="text", rows="8" class="input" data-placeholder="Описание")
					.contract-footer
						.contract-footer__text Нажимая кнопку “Оформить” я принимаю условия условия <a href="#" class="link--mark">передачи информации</a>
						.btn--md.btn--mark.btn--mobile Оставить отзыв
	+footer()
include ./block_html/_script.pug
