include block_html/_style.pug
include block_html/_include.pug

.page#header
	+header()
	.board__el.bg-pink
		.main-cont
			.board__el-wrap.board__el-wrap--extend
				.board__content
					.board__title Normal 1300 Ккал
					.program-coast.hidden-on-mobile
						.program-coast__el
							.program-coast__title Цена за 6 дней
							.program-coast__val от 6000 руб
						.program-coast__el
							.program-coast__title Цена за прием
							.program-coast__val от 180 руб
					a(href="#").js-scroll-to.btn--md.btn--white.hidden-on-mobile Заказать
				.board__img(style="background-image:url('img/slide-person-3.png')")
	.program-coast.program-coast--dark.visible-on-mobile
		.program-coast__el
			.program-coast__title Цена за 6 дней
			.program-coast__val от 6000 руб
		.program-coast__el
			.program-coast__title Цена за прием
			.program-coast__val от 180 руб
	.main-cont.visible-on-mobile
		a(href="#").js-scroll-to.btn--md.btn--mark.btn--mobile Заказать
	.content
		.section-sm
			.main-cont-sm.text
				.type--lgx.type--head.type--center.mb-24 Будь в форме каждый день
				.type--md.type--black.type--center Доставка еды для поддержания веса. Эта программа для тех, кто хочет поддерживать себя в отличной форме и тонусе. Залог успеха - сбалансированное питание - в меру белков, жиров и углеводов. Выработайте привычку питаться систематично.
		// step work
		.section-sm
			.main-cont
				.work-step.work-step--pink
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/stopwatch--pink.svg", alt="")
						.work-step__el-title Экономия времени
						.work-step__el-text Выбирайте удобное время для доставки, избавьтесь от изнурительных походов в магазин и мытья посуды
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/shield--pink.svg", alt="")
						.work-step__el-title Баланс здоровья
						.work-step__el-text Питайтесь вкусной и полезной едой, избавьтесь от переедания и нормализуйте режим питания
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/bank--pink.svg", alt="")
						.work-step__el-title Без гмо и консервантов
						.work-step__el-text Не используем красители, усилители вкуса, консерванты и другую химию
		// step work === end


		// program constructor
		.program-main-wrap#program
			.js-tab-wrap
				// choose program
				.program-group-wrap
					.main-cont
						.program-group.js-tab-cont.js-tick-cont.active(data-programType="weightLoss")
							.program-group__el.js-tick.active
								.program-group__el-name Light
								.program-group__el-val 900 Ккал
							.program-group__el.js-tick
								.program-group__el-name ExtraLight
								.program-group__el-val 1200 Ккал
							.program-group__el.js-tick
								.program-group__el-name Slim 21 день
								.program-group__el-val 1200 Ккал
				// choose program === end


			// program list
			.main-cont
				.program-list-wrap
					.program-list-header
						// program days
						.program-days.js-tick-cont
							-
								var items = ['Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб'];
							each item,i in items
								.program-days__el.js-tick(class=i === 0 ? 'active' : '') #{item}
						// program days === end
						// program consist
						.program-consist
							.program-consist__el
								.program-consist__el-val 2312
								.program-consist__el-type Ккал
							.program-consist__el
								.program-consist__el-val 456
								.program-consist__el-type Белки
							.program-consist__el
								.program-consist__el-val 326,9
								.program-consist__el-type Жиры
							.program-consist__el
								.program-consist__el-val 458
								.program-consist__el-type Углеводы
						// program consist === end
					+programList()
			// program list === end
		// program constructor === end

		.main-cont
			.program-banner.program-banner--mobile
				.program-banner-inner
					img(src="img/smile/smile-star.png", alt="").program-banner__img
					.program-banner__cost 180
					.program-banner__text руб/день
					a(href="#order").btn--md.btn--mark.js-scroll-to Заказать

		+contract('Заказать Normal','bg-pink','slide-person-3')
		+advant()
		+review()

		.main-cont.js-tab-wrap
			.title.title--lgx Часто задаваемые вопросы
			+faq()

	+footer()
include ./block_html/_script.pug
