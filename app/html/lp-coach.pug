include block_html/_style.pug
include block_html/_include.pug

.page#header
	+header()
	.board__el.bg-pink
		.main-cont
			.board__el-wrap.board__el-wrap--sm
				.board__content
					.board__title Зарабатывай вместе с друзьями
					.board__title-sub.hidden-on-mobile Приглашай знакомых и зарабатывай деньги вместе с нами. Кстати, они получат скидку -10% на первый заказ
					a(href="#").btn--md.btn--white.hidden-on-mobile
						.btn-icon-row.btn-icon-row--right
							span Войти в кабинет
							+icon("arrow-right","icon")
					a(href="#").icon-row.visible-on-mobile
						.type--md.type--white Войти в кабинет
						+icon("arrow-right","icon icon--left icon--white")
				.board__img(style="background-image:url('img/slide-person-4.png')")
	.content.content--clear-bottom
		// step work
		.main-cont
			.section
				.title.title--lgx Как это работает
				.work-step
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/step-phone.svg", alt="")
						.work-step__el-title Оставляешь заявку
						.work-step__el-text После оставления заявки ниже наш менеджер свяжется с тобой и обсудит все детали.
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/step-ticket.svg", alt="")
						.work-step__el-title Приглашаешь по своему промокоду рефералов
						.work-step__el-text Приглашаешь по своему промокоду рефералов
					.work-step__el
						.work-step__el-icon
							img(src="img/icon/step-money.svg", alt="")
						.work-step__el-title Приглашаешь по своему промокоду рефералов
						.work-step__el-text Поздравляем, ты великолепен! Больше клиентов — больше заработок.
		// step work === end

		.section-full.section--gradient
			.main-cont-sm
				.contract
					.contract-content
						.title.title--lgx Оставить заявку
						.input-row.input-row--validate
							input(type="text" data-placeholder="Ваше имя" class="input")
							.input-msg Ошибка
							+icon("close","icon icon-validate-false")
							+icon("checked","icon icon-validate-true")
						.input-row.input-row--validate
							input(type="text" data-placeholder="Телефон" data-mask="8(000)000-00-00" class="input")
							.input-msg Ошибка
							+icon("close","icon icon-validate-false")
							+icon("checked","icon icon-validate-true")
						.input-row.input-row--validate
							input(type="text" data-placeholder="Почта" class="input")
							.input-msg Ошибка
							+icon("close","icon icon-validate-false")
							+icon("checked","icon icon-validate-true")
						.input-row
							textarea(name="text", rows="5" class="input" data-placeholder="Комментарий")
						.contract-footer.contract-footer--clear
							.contract-footer__text Нажимая кнопку “Оформить” я принимаю условия условия <a href="#" class="link--mark">передачи информации</a>
							.btn--md.btn--mark.btn--mobile Отправить
	+footer()
include ./block_html/_script.pug
