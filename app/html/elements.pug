	h2.title Inputs
	.note
		p <b>NOTE!</b>&nbsp; Use data-placeholder="Ваше имя"
	.input-row.input-row--validate.input-row--error
		input(type="text" data-placeholder="Ваше имя" class="input")
		.input-msg Введённые данные не должны содержать цифры
		+icon("close","icon icon-validate-false")
		+icon("checked","icon icon-validate-true")
	.input-row.input-row--validate.input-row--success
		input(type="text" data-placeholder="Ваше имя" class="input")
		.input-msg Все прошло хорошо
		+icon("close","icon icon-validate-false")
		+icon("checked","icon icon-validate-true")
	.input-cont.input-cont--two
		.input-row
			input(type="text" data-placeholder="Ваше имя" class="input input--disable")
		.input-row
			input(type="text" data-placeholder="Ваше имя" class="input input--disable")
	.input-cont.input-cont--three
		.input-row
			input(type="text" data-placeholder="Ваше имя" class="input" value="1000")
		.input-row
			input(type="text" data-placeholder="Ваше имя" class="input")
		.input-row
			input(type="text" data-placeholder="Ваше имя" class="input")
	//.input-get
		input(type="text" data-placeholder="Ваше имя" class="input")
		.input-get__btn
			input(type="submit" value="" class="input input-get__btn-el")
			+icon("arrow-right","icon")

	.input-row
		textarea(name="text", cols="30", rows="10" class="input" data-placeholder="Ваш текст")

	//checkbox remember
	.login-remember
		.check-el
			label.style-label.style-label--checkbox
				input(type="checkbox").style-input
				.style-input-element
					+icon("checked","icon")
				.style-input-text Я ознакомился с #[a(href="#") политикой конфиденциальности], #[a(href="#") публичной офертой] и даю согласие на обработку моих персональных данных

	h3 Checkbox + Radio
	.buttons-list
		+checkbox('Выбрать пункт 1')
		+checkbox('Выбрать пункт 2',"checked")
		+checkbox('Выбрать пункт 2',"false",'disable')

	.buttons-list
		+radio('Выбрать пункт 1',"list","true")
		+radio('Выбрать пункт 2',"list")
		+radio('Выбрать пункт 3',"list",false,'disable')

	h3 Switch
	.buttons-list
		.switch.js-toggle
		.switch.active.js-toggle
		.switch.disabled

	h3 Dropdown
	.row
		- for (var i=0;i<3;i++)
			.col-md-4
				.dropdown
					input(type="hidden" name="name" value="0")
					.dropdown-current
						.dropdown-title Выберите цвет
						.dropdown-current__val Оранжевый
						+icon("arrow-down","icon")
					.dropdown-menu
						.dropdown-menu__el(data-value="1") Красный
						.dropdown-menu__el(data-value="2") Синий
						.dropdown-menu__el(data-value="3") Желтный

	.elements-hr
	.element-list-svg
		each item in svgArray
			.element-list-svg__icon
				svg(class="icon")
					use(xlink:href="#" + item.slice(0, item.length - 4))
				.element-list-svg__name #{item.slice(0, item.length - 4)}

