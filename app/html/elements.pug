	h2.title Buttons

	h3 Size
	.buttons-list
		.btn--md.btn--mark Large button
		.btn--sm.btn--mark Small button

	h3 Colors
	.buttons-list
		.btn--md.btn--mark Primary
		.btn--md.btn--light Secondary
		a(href="#").btn--md.btn--text Text only
		.btn--md.btn--disable Disable
	h3 Add icon
	.buttons-list.buttons-list--center
		a(href="#").btn--md.btn--light
			.btn-icon-row.btn-icon-row--right
				span C  иконкой
				+icon("arrow-right","icon")
		a(href="#").btn--md.btn--mark
			.btn-icon-row.btn-icon-row--right
				span C  иконкой
				+icon("arrow-right","icon")
		a(href="#").btn--md.btn--mark
			.btn-icon-row.btn-icon-row--left
				+icon("delete","icon")
				span C  иконкой
	.buttons-list.buttons-list--center
		a(href="#").btn--sm.btn--light
			.btn-icon-row.btn-icon-row--right
				span C  иконкой
				+icon("arrow-right","icon")
		a(href="#").btn--sm.btn--mark
			.btn-icon-row.btn-icon-row--right
				span C  иконкой
				+icon("arrow-right","icon")
		a(href="#").btn--sm.btn--mark
			.btn-icon-row.btn-icon-row--left
				+icon("delete","icon")
				span C  иконкой
		a(href="#").btn--sm.btn--text-red
			.btn-icon-row.btn-icon-row--left
				+icon("delete","icon")
				span Удалить
